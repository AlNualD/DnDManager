<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar_actionbar"
    android:layout_width="match_parent"
    android:layout_height="?android:actionBarSize"
    android:background="@color/primary_bronze"
    android:nestedScrollingEnabled="false"

    android:padding="8dp"
    android:paddingStart="8dp"
    android:paddingLeft="8dp"
    android:paddingTop="8dp"
    android:paddingEnd="8dp"
    android:paddingRight="8dp"
    android:paddingBottom="8dp"
    android:textAlignment="viewStart"
    app:logo="@drawable/ic_logo_dice_without_text"
    app:logoDescription="Tavern of Heroes"
    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    app:title="Tavern of Heroes"
    app:titleTextAppearance="@style/FontH2"
    app:titleTextColor="@color/primary_bronze">

</androidx.appcompat.widget.Toolbar>